{
  "scripts": {
    "start": "electron .",
    "debug": "electron . --inspect",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir -win",
    "dist": "electron-builder -w"
  },
  "name": "minifier",
  "version": "1.0.0",
  "main": "main.js",
  "author": "virendra shakya",
  "license": "MIT",
  "devDependencies": {
    "electron": "^17.0.1",
    "electron-builder": "^22.14.13"
  },
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "cssnano": "^5.0.17",
    "postcss": "^8.4.6"
  },
  "build": {
    "appId": "dev.virendra.minifier",
    "productName": "Minifier",
    "copyright": "Copyright Â© 2022 ${author}",
    "extraResources": [
      "./extraResources/**"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "asar": true,
      "target": "nsis",
      "icon": "assets/logo.ico"
    },
    "nsis": {
      "installerIcon": "assets/logo.ico",
      "installerHeaderIcon": "assets/logo.ico",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "artifactName": "Setup-${productName}-${version}.${ext}"
    }
  }
}
